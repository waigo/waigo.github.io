.page.home
  position relative
  
  .headroom-wrapper
    background-color $color4
    +below($width-xs)
      height $headerHeight !important
  
  main
    padding 0
    margin-top -1px  /* to eliminate strange thin white line above */
  
  section.splash
    height "calc(100vh - %s)" % ($headerHeight)
    background-color $color4
    display flex
    flex-flow column no-wrap
    justify-content center
    align-items center
    color $white
    font-size 1.7rem
    text-align center
    +below($width-xs)
      font-size 1.3rem

    .logo
      display block
      transition all 0.3s linear
      width 144px
      height 144px
      margin 0 0 0.5em
      retina-image("/img/logo.png", contain)
      standard-box-shadow()
      +below($width-xs)
        width 96px
        height 96px

    
    p.tagline
      @extend $HeaderFont
      margin 0.7em 0
      font-size 120%
      line-height 1.2em
      width 50%
      +below($width-s)
        width 80%
        margin-bottom 0
    
    .actions
      margin 1em 0 2em
      +below($width-xs)
        margin-bottom 1em
      a
        button($white, $color4)
        font-size 80%
        margin 0 0.5em
        +below($width-xs)
          display block
          margin 0.5em auto
          font-size 100%

    .install
      @extend $CodeFont
      font-size 60%
      text-bg-color-border-radius($color1, 0.3em, 0.4em)      
      
    .meta
      margin-top 1.2em
      a
        navlink($white, $black, $white, transparent)
        font-size 50%
        color $white
        margin 0 0.5em
        i + span
          margin-left 0.3em
        
  section.features-1
    padding 1em
    
    .intro
      @extend $BodyFont
      width 80%
      font-size 2.2rem
      text-align center
      margin 1em auto 1.5em
      line-height 1.5em
      +below($width-xs)
        font-size 1.8rem
    
    ul
      display flex
      flex-flow row wrap
      justify-content space-between
      align-items flex-start
      margin 0 auto
      width 90%
      +below($width-s)
        width 100%
      +below($width-xs)
        flex-flow column no-wrap
      li
        display block        
        width 30%
        font-size 1rem
        margin 1.5em auto
        +below($width-s)
          width 40%
        +below($width-xs)
          display block
          width 100%
        .title
          @extend $HeaderFontBold
          display inline-block
          font-size 140%
          &:before
            display inline-block
            vertical-align top
            margin 0 0.5em 0.3em 0
            content " "
            width 32px
            height 32px
        .description
          margin-top 1em
          line-height 1.4em
          
        &:nth-child(1) .title:before
          retina-image("/img/icon-rocket.png", contain)
        &:nth-child(2) .title:before
          retina-image("/img/icon-plugin.png", contain)
        &:nth-child(3) .title:before
          retina-image("/img/icon-text-field.png", contain)
        &:nth-child(4) .title:before
          retina-image("/img/icon-routing.png", contain)
        &:nth-child(5) .title:before
          retina-image("/img/icon-template.png", contain)
        &:nth-child(6) .title:before
          retina-image("/img/icon-users.png", contain)
        &:nth-child(7) .title:before
          retina-image("/img/icon-email.png", contain)
        &:nth-child(8) .title:before
          retina-image("/img/icon-cron.png", contain)
        &:nth-child(9) .title:before
          retina-image("/img/icon-setup.png", contain)


  section.quick-start
    margin 2em 0
    background-color $color1
    padding 3em 1em
    color $white
    text-align center
    font-size 1rem
    +below($width-xs)
      padding 1em
      font-size 0.8rem

    .wrapper
      display inline-block
      width 80%
      text-align left
      +below($width-xs)
        width 100%

    h2
      display block
      @extend $HeaderFont
      font-size 200%
      margin-bottom 0.8em
    pre
    div
      display inline-block
    pre
      @extend $CodeFont
      line-height 1.5em
      background-color $black
      width 40%
      padding 1em
      margin-right 2em
    div
      vertical-align top
      width 50%
      font-size 110%
      line-height 1.3em      
      p
        margin-bottom 1em
      
    +below($width-s)
      pre
        display block
        width 100%
      div
        display block
        margin-top 1.5em
        line-height 1.5em       
        width 100%
        
  section.next-links
    margin-top 2em
    display flex
    flex-flow row wrap
    justify-content center
    align-items center
    font-size 1rem
    > div
      margin 2em 0
      text-align center
      +below($width-xs)
        margin 1em 0
      a
        button()
        display inline-block
        margin 0 0.5em
        font-size 140%
      p
        width 70%
        margin 1em auto 0
        line-height 1.2em


